{
    "name": "sfachinger/contao-hello-world-bundle",
    "type": "contao-bundle",
    "description": "Skeleton for custom Contao 4 bundles von Steffen Fachinger",
    "homepage": "https://contao.org",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Steffen Fachinger",
            "homepage": "https://github.com/sfachinger"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "contao/core-bundle": "^4.9",
        "symfony/config": "^4.4 || ^5.1",
        "symfony/dependency-injection": "^4.4 || ^5.1",
        "symfony/http-kernel": "^4.4 || ^5.1"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "contao/easy-coding-standard": "^2.0",
        "phpunit/phpunit": "^8.4",
        "symfony/phpunit-bridge": "^4.4 || ^5.1"
    },
    "extra": {
        "contao-manager-plugin": "SFachinger\\ContaoHelloWorldBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "SFachinger\\ContaoHelloWorldBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SFachinger\\ContaoHelloWorldBundle\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/sfachinger/ContaoHelloWorldBundle/issues",
        "source": "https://github.com/sfachinger/ContaoHelloWorldBundle/issues"
    },
    "scripts": {
        "cs-fixer": [
            "vendor/bin/ecs check src/ tests/ --fix --ansi"
        ]
    }
}
